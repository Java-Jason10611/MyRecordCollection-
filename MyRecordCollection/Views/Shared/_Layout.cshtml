<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyRecordCollection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Album" asp-action="AddAlbum">Add Album</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Album" asp-action="ViewAlbums">View collection</a>
                    </li>
                </ul>
            </div>
            <div>
                <form asp-controller="Album" asp-action="Search">
                    <p>
                        <select name="searchType">
                            <option value="Artist">Artist</option>
                            <option value="Album">Album name </option>
                        </select>
                        Search Album <input type="text" name="SearchString" />
                        <input type="submit" value="Search" />
                    </p>
                </form>
            </div>
       
            <div>
                <form asp-controller="Album" asp-action="SearchGenre">
                    <select name="SearchString">
                        <option value="Rap">Rap</option>
                        <option value="Rock">Rock</option>
                        <option value="punk">punk</option>
                        <option value="Ska">Ska</option>
                        <option value="Acoustic">Acoustic</option>
                        <option value="Rock">Rock</option>
                        <option value="Emo">Emo</option>
                        <input type="submit" value="Search" />
                    </select>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MyRecordCollection - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
